<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView_MatNr"
        android:layout_width="333dp"
        android:layout_height="79dp"
        android:layout_marginTop="164dp"
        android:text="Gib deine Matrikelnumer ein"
        android:textSize="24.dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_abschicken"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:layout_marginTop="632dp"
        android:text="ABSCHICKEN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxt_eingabeMatNr"
        android:layout_width="294dp"
        android:layout_height="59dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_antwortServer"
        android:layout_width="599dp"
        android:layout_height="206dp"
        android:layout_marginTop="384dp"
        android:gravity="center"
        android:text="Antwort vom Server"
        android:textSize="24.dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>